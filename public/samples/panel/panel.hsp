var klass=require("hsp/klass"),
    json=require("hsp/json");
    
var PanelController = klass({ 
  attributes: {
    "head":{type:"template"}, 
    "body":{type:"template"}
  }
});

// sample panel template
# template panel using c:PanelController
  <div class="panel">
    {if c.head}
      <div class="head"> <#c.head/> </div>
    {/if}
    <div class="body">
      <#c.body/>
    </div>
  </div>
# /template

# template test(m)
  <#panel body="Panel A (headless): {m.text}"/>

  <#panel head="Panel B">
    <#body>{m.text}! <a onclick="{update(10)}">Update model</a></#body>
  </#panel>

  <#panel>
    <#head>Panel C: <a onclick="{update(1)}">Update model</a></#head>
    <#body>{m.text}!</#body>
  </#panel>
# /template

var model={text:"Hello World"}, count=0;

function update(incr) {
  count+=incr;
  json.set(model,"text","Hello World ("+count+")");
}

// display the test template in the #output div
hsp.display(test(model),"output");
